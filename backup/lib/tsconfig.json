{
    "compilerOptions": {
        "alwaysStrict": false,
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./src/",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "diagnostics": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "extendedDiagnostics": true,
        "incremental": true,
        "lib": [ "dom", "es6" ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "outDir": "./dist",
        "paths": {
            "*": [
                "src/*",
                "node_modules/*"
            ]
        },
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true,
        "target": "es5"
    },
    "output": [
        "./dist"
    ],
    "files": [
        "src/index.ts"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.css",
        "./src/**/*.svg",
        "./src/**/*.webp",
        "./src/**/*.png",
        "./src/**/*.jpg",
        "./src/**/*.jpeg",
        "./src/**/*.gif",
        "./src/**/*.vert",
        "./src/**/*.frag"
    ],
    "exclude": [
        "node_modules/",
        "doc/",
        "**/*.spec.*",
        "**/*.test.*"
    ]
}